generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  firstName    String
  lastName     String
  password     String
  refreshToken String?
  createdAt    DateTime @default(now())
}

model Book {
  id              String   @id @default(cuid())
  name            String
  author          String
  publisher       String
  publicationYear String
  subject         String
  createdAt       DateTime @default(now())
}
